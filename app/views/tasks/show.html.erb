<p style="color: green"><%= notice %></p>

<%= turbo_frame_tag "modal" do %>
  <div class="modal">

    <%= render @task %>

    <div>
      <%= link_to "Edit this task", edit_task_path(@task), class: 'button'%> |
      <%= link_to "Cancel", "#", data:{
        controller: "modals",
        action: "modals#close"
        }, class: 'button'%>

      <%= button_to "Destroy this task", @task, method: :delete, class: 'delete-button' %>
    </div>
  </div>
<% end %>
