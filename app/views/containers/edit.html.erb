<%= turbo_frame_tag "modal" do %>
  <div class="modal">
    <h1>Editing container</h1>

    <%= render "form", container: @container %>

    <br>

    <div>
      <%= link_to "Show this container", @container, class: 'button' %> |
      <%= link_to "Cancel", "#", data:{
        controller: "modals",
        action: "modals#close"
      }, class: 'button' %>
    </div>
  </div>
<% end %>
